<% layout('../views/layout/mainLayout') %>
    <div class="row">
        <div class="col-12">
            <div class="row my-3">
                <h1 class="text-center">Business Contacts</h1>
            </div>
            <div class="row my-2">
                <form action="/business-contacts/add-update" method="GET">
                    <button class="btn btn-primary">Add New Contact</button>
                </form>
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Contact Name</th>
                                <th>Contact Number</th>
                                <th>Email Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let index=0; index < contacts.length; index++ ) { %>
                                <tr>
                                    <td>
                                        <%- contacts[index].contactName %>
                                    </td>
                                    <td>
                                        <%- contacts[index].contactNumber %>
                                    </td>
                                    <td>
                                        <%- contacts[index].emailAddress %>
                                    </td>
                                    <td>
                                        <a href="/business-contacts/add-update?mode=edit&id=<%- contacts[index].id %> ">
                                            <button class="btn btn-primary">Update</button>
                                        </a>
                                    </td>
                                    <td>
                                        <form method="POST"
                                            action=<%-`/business-contacts/${contacts[index].id}?_method=DELETE`%>>
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>